# Database
# Local development uses port 5433 to avoid conflicts (see docker-compose.yml)
DATABASE_URL=postgresql://postgres:postgres@localhost:5433/subvenciones
DB_ECHO=false

# N8n Webhook
N8N_WEBHOOK_URL=https://nokodo10.app.n8n.cloud/webhook/boe-grants
N8N_API_KEY=

# BOE/BDNS Configuration
MIN_RELEVANCE_SCORE=0.3
BDNS_MAX_RESULTS=50
PROCESS_PDFS=true

# Server
API_HOST=0.0.0.0
# PORT is set automatically by Render/Railway, use 8000 for local dev
# API_PORT=8000  (deprecated - use PORT env var instead)
DEBUG=true

# CORS
CORS_ORIGINS=http://localhost:3000,http://localhost:5173

# Logging
LOG_LEVEL=INFO
